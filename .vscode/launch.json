{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Quick Comparison",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/tests/quick_comparison.php",
      "cwd": "${workspaceFolder}",
      "port": 9003,
      "xdebugSettings": {
        "max_data": 65535,
        "show_hidden": 1,
        "max_children": 100,
        "max_depth": 5
      }
    },
    {
      "name": "Debug: Snapshot Test (Legacy)",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/tests/snapshot_test.php",
      "args": ["--capture-legacy"],
      "cwd": "${workspaceFolder}",
      "port": 9003,
      "xdebugSettings": {
        "max_data": 65535,
        "show_hidden": 1,
        "max_children": 100,
        "max_depth": 5
      }
    },
    {
      "name": "Debug: Snapshot Test (Compare)",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/tests/snapshot_test.php",
      "args": ["--compare"],
      "cwd": "${workspaceFolder}",
      "port": 9003,
      "xdebugSettings": {
        "max_data": 65535,
        "show_hidden": 1,
        "max_children": 100,
        "max_depth": 5
      }
    },
    {
      "name": "Debug: PHPUnit",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/phpunit",
      "args": ["tests/ArchivesProcessorsTest.php"],
      "cwd": "${workspaceFolder}",
      "port": 9003
    },
    {
      "name": "Debug: Current PHP File",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9003
    }
  ]
}
